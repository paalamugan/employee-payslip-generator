doctype strict
html(xmlns="http://www.w3.org/1999/xhtml")
  head
    meta(http-equiv='Content-Type' content='text/html; charset=utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(content='telephone=no' name='format-detection')
    block title
      title Title of your mail
    style(type='text/css' data-inline).
      @import url(https://fonts.googleapis.com/css?family=Open+Sans:300,400,500,600,700);
    style(data-inline).
      @media screen and (max-width: 600px) {
        u+.body {
          width: 100vw !important;
        }
      }
      a[x-apple-data-detectors] {
        color: inherit !important;
        text-decoration: none !important;
        font-size: inherit !important;
        font-family: inherit !important;
        font-weight: inherit !important;
        line-height: inherit !important;
      }
    //- if mso
      style(type='text/css').
        body, table, td {
          font-family: Arial, Helvetica, sans-serif !important;
        }
        img {
          -ms-interpolation-mode: bicubic;
        }
        .box {
          border-color: #eee !important;
        }

    link(rel='stylesheet' href='/assets/template.css' data-inline="data-inline")

  body(itemscope='', itemtype='http://schema.org/EmailMessage')
    table.main(width='100%' cellspacing='0' cellpadding='0')
      tr
        td(align='center' valign='top')
          //- if (gte mso 9)|(IE)
            table(border='0' cellspacing='0' cellpadding='0')
              tr
                td(align='center' valign='top' width='700')

          span.preheader
            block preheader
              |  This is preheader text.
          table(cellspacing='0' cellpadding='0')
            tr
              td.p-md
                table(cellpadding='0' cellspacing='0')
                  tr
                    block content


    //- table(cellpadding='0', cellspacing='0', align='center', border='0')
      tr
        td(height='10')
      tr
        td
          table(cellpadding='0', cellspacing='0', align='center', border='0')
            tr
              td(width='260', align='center') Â© #{year}. #{title} All rights reserved.
